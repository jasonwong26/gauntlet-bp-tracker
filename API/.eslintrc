{
  "root": true,
  "env": {
      "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "rules": {
    "no-extra-boolean-cast": "warn",
    "quotes": ["error", "double", { "avoidEscape": true }]
  }
}

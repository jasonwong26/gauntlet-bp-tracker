{
  "compilerOptions": {
    //### compiler behaviors ###
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es2019",

    //### typescript rules ###
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "src/**/*test.ts"
  ]
}
